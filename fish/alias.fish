# alias.fish
# to register alias/ abbrebiation

# abbrebiation for git
abbr -a gst git status
abbr -a gpush git push
abbr -a gpull git pull
abbr -a gcom git commit -m

# abbrebiation for tmux
abbr -a tls tmux ls
abbr -a ta tmux attach-session
abbr -a tkill tmux kill-server

# abbrebiation for commands
abbr -a python python3
abbr -a py python3
abbr -a pip pip3

# abbrebiation for others
abbr -a less less -R
abbr -a vi vim
abbr -a source_config source ~/.config/fish/source.fish

# alias for sl
alias sl='sl -e'
alias LS='sl -e'

abbr -a ZZ exit
abbr -a :q exit
